{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-react"
    ],
    "jsRules": {
        "semicolon": [false, "never"],
        "quotemark": [true, "single", "jsx-double"],
        "indent": [true, "spaces", 4]
    },
    "rules": {
        "semicolon": [false, "never"],
        "quotemark": [true, "single", "jsx-double"],
        "indent": [true, "spaces", 4],
        "object-literal-sort-keys": [false],
        "interface-name": [false],
        "ordered-imports": [false],
        "jsx-no-multiline-js": [false],
        "jsx-key": [false],
        "jsx-no-lambda": [false],
        "jsx-alignment": [false]
    },
}
